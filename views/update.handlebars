<div class="row">
  <div class="col-md-12">
    <h3>Update {{name}}</h3>
    <hr>
    <form action="/hat/update" method="post">
      <input class="form-control" type="hidden" name="id" value="{{_id}}">
      <div class="form-group">
       <input class="form-control" type="text" name="name" value="{{name}}">
      </div>
      <div class="form-group">
       <input class="form-control" type="number" name="size" value="{{size}}">
      </div>
      <div class="form-group">
       <input class="form-control" type="text" name="materialPrimary" value="{{materials.primary}}">
      </div>
      <div class="form-group">
       <input class="form-control" type="text" name="materialSecondary" value="{{materials.secondary}}">
      </div>
      <div class="form-check">
       <label class="form-check-label">
         <input type="checkbox" name="style" value="Fitted" class="form-check-input"> Fitted
       </label>
      </div>
      <div class="form-check">
       <label class="form-check-label">
         <input type="checkbox" name="style" value="Snapback" class="form-check-input"> Snapback
       </label>
      </div>
      <div class="form-check">
       <label class="form-check-label">
         <input type="checkbox" name="style" value="Sailor" class="form-check-input"> Sailor
       </label>
      </div>
      <button class="btn btn-primary" type="submit" name="">Update {{name}}</button>
    </form>
  </div>
</div>

